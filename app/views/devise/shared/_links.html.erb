<div id="auth_system_shared_links">
  <%- if controller_name != 'sessions' %>
      <%= link_to t("auth_system.signin"), new_session_path(resource_name) %>
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to t("auth_system.signup.signup"), new_registration_path(resource_name) %>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to t("auth_system.forgot_password"), new_password_path(resource_name) %>
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to t("auth_system.confirmation"), new_confirmation_path(resource_name) %>
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to t("auth_system.unlock"), new_unlock_path(resource_name) %>
  <% end -%>
</div>