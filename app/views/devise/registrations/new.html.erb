<div id="sign_up" class="content_wrapper">
  <div class="row">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="firstname_container">
          <%= f.input :first_name, autofocus: true, placeholder: t("auth_system.signup.placeholder.first_name"), required: true, label: false, wrapper: false, input_html: { class: "first_name radius input_shadow" }, error: false %>
        </div>

        <div class="lastname_container">
          <%= f.input :last_name, autofocus: true, placeholder: t("auth_system.signup.placeholder.last_name"), required: true, label: false, wrapper: false, input_html: { class: "last_name radius input_shadow" }, error: false %>
        </div>

        <div class="email_container">
          <%= f.input :email, placeholder: t("auth_system.signup.placeholder.email"), required: true, label: false, wrapper: false, input_html: { class: "email radius input_shadow" }, error: false  %>
        </div>

        <div class="password_container">
          <%= f.input :password, autocomplete: "off", placeholder: t("auth_system.signup.placeholder.password"), required: true, label: false, wrapper: false, input_html: { class: "password radius input_shadow" }, error: false  %>
        </div>

        <div class="agreement_container">
          <p><%= t("auth_system.signup.agreement_instruction_html") %></p>
        </div>

        <div><%= f.submit t("auth_system.signup.signup"), class: "button success radius submit" %></div>
    <% end %>

        <p class="or">
            <span>OR</span>
        </p>

        <%= render "devise/shared/sns_connector" %>


    <%= render "devise/shared/links" %>
  </div>
</div>