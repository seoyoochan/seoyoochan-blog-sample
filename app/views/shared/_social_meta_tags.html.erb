<% if Rails.env.production? %>
    <a href="https://plus.google.com/106798602015630150248" rel="publisher" style="display: none">Google+</a>
<% end %>
<!-- Google Authorship and Publisher Markup -->
<link rel="author" href="https://plus.google.com/105807467934256775171/posts"/>
<link rel="publisher" href=”https://plus.google.com/105807467934256775171"/>

<meta property="fb:app_id" content="781393488591432" />
<meta property="og:locale" content="en_US" />
<meta property="og:locale:alternate" content="ko_KR" />
<% if (params["controller"] == "posts") && (params["action"] == "show") %>
    <!-- Schema.org markup for Google+ -->
    <meta itemprop="name" content="<%= @post_meta_title %>" />
    <meta itemprop="description" content="<%= @post_meta_description %>" />
    <% if @post_meta_img %><meta itemprop="image" content="<%= @post_meta_img %>" /><% end %>
    <!-- Twitter Card data -->
    <meta name="twitter:site" content="SEOYOOCHAN.COM" />
    <meta name="twitter:title" content="<%= @post_meta_title %>" />
    <meta name="twitter:description" content="<%= @post_meta_description %>" />
    <!-- Open Graph data -->
    <meta property="og:title" content="<%= @post_meta_title %>" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="<%= request.url %>" />
    <% if @post_meta_img %><meta property="og:image" content="<%= @post_meta_img %>" /><% end %>
    <meta property="og:description" content="<%= @post_meta_description %>" />
    <meta property="og:site_name" content="SEOYOOCHAN.COM" />
    <meta property="article:published_time" content="<%= @post_meta_published_time %>" />
    <meta property="article:modified_time" content="<%= @post_meta_updated_time %>" />
    <% if @post_meta_category %><meta property="article:section" content="<%= @post_meta_category %>" /><% end %>
    <% if @post_meta_tag %><meta property="article:tag" content="<%= @post_meta_tag %>" /><% end %>
<% else %>
    <!-- Open Graph data -->
    <meta property="og:title" content="<%= t("meta_tags.home.title") %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= request.url %>" />
    <meta property="og:site_name" content="SEOYOOCHAN.COM" />
    <meta property="og:image" content="https://s3-ap-northeast-1.amazonaws.com/seoyoochan/assets/yoochan.jpg" />
    <meta property="og:description" content="<%= t("meta_tags.home.description") %>" />
    <!-- Schema.org markup for Google+ -->
    <meta itemprop="name" content="<%= t("meta_tags.home.title") %>" />
    <meta itemprop="description" content="<%= t("meta_tags.home.description") %>" />
    <meta itemprop="image" content="https://s3-ap-northeast-1.amazonaws.com/seoyoochan/assets/yoochan.jpg" />
    <!-- Twitter Card data -->
    <meta name="twitter:site" content="SEOYOOCHAN.COM" />
    <meta name="twitter:title" content="<%= t("meta_tags.home.title") %>" />
    <meta name="twitter:description" content="<%= t("meta_tags.home.description") %>" />
<% end %>